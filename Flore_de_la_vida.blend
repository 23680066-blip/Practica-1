import bpy
import math

bpy.ops.object.select_all(action='SELECT')
bpy.ops.object.delete()

radio = 3
angulo_actual = 0
paso_angular = 60

# Circulo central
bpy.ops.mesh.primitive_circle_add(vertices=64, radius=radio, location=(0, 0, 0))

# Circulos alrededor (Flor de la Vida b√°sica - 6 circulos)
while angulo_actual < 360:
    x = radio * math.cos(math.radians(angulo_actual))
    y = radio * math.sin(math.radians(angulo_actual))
    bpy.ops.mesh.primitive_circle_add(vertices=64, radius=radio, location=(x, y, 0))
    angulo_actual += paso_angular
